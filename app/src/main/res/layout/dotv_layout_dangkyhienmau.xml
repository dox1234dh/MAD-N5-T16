<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_history">
    <include
        android:id="@+id/dotv_toolbar_dangkyhienmau"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="550dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dotv_redline"
        android:layout_marginTop="100dp"
        android:layout_marginStart="250dp"
        android:rotation="90"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ListView
        android:id="@+id/dotv_list_dangkyhienmau"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15sp"
        android:layout_marginStart="15sp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/dotv_footer_dangkyhienmau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dotv_toolbar_dangkyhienmau">
    </ListView>
    <include
        android:id="@+id/dotv_footer_dangkyhienmau"
        layout="@layout/toolbar_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>