<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_gravity="bottom"
    android:background="@drawable/rectangle_10"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/markerEmployee"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/marker_1" />

    <ImageView
        android:id="@+id/hospitalEmployee"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/hospital_1" />

    <ImageView
        android:id="@+id/order_historyEmployee"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/order_history_1" />

</LinearLayout>