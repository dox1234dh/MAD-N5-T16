<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/header_toolbar_mhchinh_user"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/hoVaTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtXinChao"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Xin chào, "
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="287dp"
            android:layout_height="41dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:text="Trần Văn Đô"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/nhomMau"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtNhomMau"
                android:layout_width="29dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AB"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdisplay1"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Nhóm máu"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/iconTen"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/icons8_n_50"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/soLanHienMau"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txtSoLanHienMau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtdisplay2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Lần hiến máu"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>